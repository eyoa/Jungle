<dt>Rating: </dt>
<dd><%= review.rating %></dd>
<dt>Reviewed on: </dt>
<dd><%= review.created_at.strftime("%B %e, %Y") %></dd>
<dt>Review: </dt>
<dd><%= review.description %></dd>
 <% if current_user.id == review.user_id %>
  <%= button_to "delete", product_review_path(id: review.id, product_id: review.product_id), method: "delete" %>
 <% end %>

