<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  
  <div class="form-group row">
    <label for="firstName" class="col-sm-2 col-form-label">First Name:</label>
    <div class="col-sm-10">
      <%= f.text_field :first_name%>
    </div>
  </div>
  <div class="form-group row">
    <label for="lastName" class="col-sm-2 col-form-label">Last Name:</label>
    <div class="col-sm-10">
    <%= f.text_field :last_name , html: {class: "form-control"}%>
    </div>  
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email:</label>
    <div class="col-sm-10">
    <%= f.text_field :email , html: {class: "form-control"}%>
    </div>  
  </div>
  <div class="form-group row" >
    <label for="password" class="col-sm-2 col-form-label">Password:</label>
    <div class="col-sm-10">
      <%= f.password_field :password , html: {class: "form-control"}%>
    </div>  
  </div>
  <div class="form-group row" >
    <label for="passwordConfirm" class="col-sm-2 col-form-label">Confirm Password:</label>
     <div class="col-sm-10">
      <%= f.password_field :password_confirmation , html: {class: "form-control"}%>
    </div>  
  </div>

  <%= f.submit "Submit",  class: "btn btn-primary" %>

<% end %>